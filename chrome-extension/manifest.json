{
  "manifest_version": 2,
  "name": "Screen2Braille",
  "description": "",
  "version": "1.0.0",

  "background": {
    "scripts": ["browserAction/background_script.js"]
  },
  "content_scripts": [
    {
      "matches": ["*://*.mozilla.org/*", "http://*/*", "https://*/*"],
      "js": ["content_script.js"]
    }
  ],
  "browser_action": {
    "default_popup": "browserAction/index.html",
    "default_title": "Screen2Braille"
  },
  "permissions": ["webRequest"]
}
